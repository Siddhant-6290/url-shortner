


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>URL Shortener</title>
</head>
<body>
  <h1>URL-Shoertner</h1>
  <% if (locals.id) { %>
    <p>URL-Generated: http://localhost:8001/<%= id  %></p>
   
  <% } %>
  <div>
    <form method="post" action="url">
        <label>Enter your Url</label>
        <input type="text" placeholder="enter url to be shortened" name="url"/>
        <!-- name="url" for sending it for getting data -->
        <button type="submit">Generate</button>
    </form>
  </div>

  <div>
    <% if (locals.urls) { %>
     <table>
        <thead>
            <th>Sl.No</th>
            <th>Shortid</th>
            <th>redirected</th>
            <th>Clicks</th>
        </thead>
        <tbody>
            <% urls.forEach((url,index) => { %>
            <tr>
             <td><%= index+1 %></td>
             <td><%= url.shortId %></td>
             <td><%= url.redirectURL %></td>
             <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
        </tbody>
     </table>
    <% } %>
  </div>
  
  
</body>
</html>
